<h1>Editing Book</h1>

<%= form_with model:@book, local:true do |f| %>
<%= render partial: "error_message", model: f.object %>

  <p>title</p>
  <%= f.text_field :title %>
  
  <p>body</p>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
  
  <%= link_to "Show", book_path(@book) %>
  <%= link_to "Back", books_path %>
  
<% end %>

